@page "/DeleteCollage/{Id:int}"
@inject CollageService ser
@inject NavigationManager navManager
@inject IJSRuntime js
@attribute [Authorize(Roles = "Admin")]

<AuthorizeView>
    <Authorized>
        <PageTitle>حذف الكلية/المعهد</PageTitle>

        @if (collageDTO != null)
        {
            <div class="card ">
                <div class="card-header bg-dark text-white">
                    بيانات الكلية/المعهد
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>اسم الكلية/المعهد</strong></td>
                                <td>@collageDTO.Name</td>
                            </tr>
                            <tr>
                                <td><strong>الموظف المسؤول عن المركز</strong></td>
                                <td>@collageDTO.UserName</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group d-flex justify-content-center">
                        <button class="btn btn-danger mx-2" @onclick="Delete">حفظ</button>
                        <button class="btn btn-outline-dark" @onclick="Cancel">إلغاء الأمر</button>
                    </div>
                </div>
            </div>


        }
        else
        {
            <div class="alert alert-info" role="alert">
                لا توجد بيانات
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger" role="alert">
            ليس لديك صلاحية
        </div>
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter]
    public int Id { get; set; }
    private CollageDTO? collageDTO= new();

    protected override async Task OnParametersSetAsync()
    {
        if (Id > 0)
        {
            collageDTO = await ser.GetById(Id);
        }
        else
        {
            await js.InvokeVoidAsync("alert", "الجهة غير صالحة");
            navManager.NavigateTo("/Collages");
        }

    }
    async void Delete()
    {
        if (collageDTO != null)
        {
            var result = await ser.Delete(Id);
            if (result)
            {
                navManager.NavigateTo("/Collages");
            }
            else
            {
                await js.InvokeVoidAsync("alert", "حدث خطأ عند الحذف");
            }
        }
    }
    void Cancel()
    {
        navManager.NavigateTo("/Collages");
    }
}