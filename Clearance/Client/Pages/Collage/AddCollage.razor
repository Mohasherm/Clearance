@page "/AddCollage"
@page "/EditCollage/{Id:int}"
@inject CollageService ser
@inject DirectionService dSer
@inject CollageDirectionService cdSer
@inject AuthenticationHttpClient http
@inject NavigationManager navManager
@inject IJSRuntime js
@attribute [Authorize(Roles = "Admin")]

<AuthorizeView Context="aContext">
    <Authorized>
        <PageTitle>@title</PageTitle>
        <div class="card">
            <div class="card-header">
                <span class="card-header-text">@title</span>
            </div>
            <div class="card-body">
                <EditForm Model="collageDTO" OnValidSubmit="Save">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-group">
                        <label for="name">اسم المركز</label>
                        <InputText id="name" class="form-control mb-2" @bind-Value="collageDTO.Name" placeholder="اسم المركز"></InputText>
                        @if (lst_userDTO != null)
                        {
                            <div class="mb-3">
                                <label for="emp">الموظف المسؤول عن المركز</label>

                                <InputSelect class="form-select" id="emp" @bind-Value="collageDTO.UserId">
                                    <option value="">اختر الموظف المسؤول....</option>
                                    @foreach (var item in lst_userDTO)
                                    {
                                        <option value="@item.Id">@item.FullName</option>
                                    }
                                </InputSelect>
                            </div>
                        }
                        @if (Id > 0)
                        {
                            <div class="card mb-2">
                                <div class="card-header">
                                    <span class="card-header-text">الجهات المتعلقة بهذا المركز</span>
                                    
                                </div>
                                <div class="card-body">
                                    <div class="row g-3 mb-3">
                                        <div class="col-auto">
                                            <InputSelect class="form-select" @bind-Value="collageDirectionDTO.DirectionId">
                                                @foreach (var item in lst_DirectionDTO)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </InputSelect>
                                        </div>
                                        <div class="col-auto">
                                            @if (!adding)
                                            {
                                                <button class="btn btn-outline-info"
                                                @onclick="AddCollageDirection">
                                                    إضافة جهة
                                                </button>
                                            }
                                            else
                                            {
                                                <p>يتم الإضافة الآن ...</p>
                                            }
                                        </div>
                                    </div>
                                    @if (lst_CollageDirectionDTO != null && lst_CollageDirectionDTO.Count > 0)
                                    {
                                        <table class="table table-sm table-bordered table-striped table-hover">
                                            <thead class="table-primary">
                                                <tr>
                                                    <th><i class="fa pull-right hidden-xs"></i>الجهة</th>
                                                    <th><i class="fa pull-right hidden-xs"></i> </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var r in lst_CollageDirectionDTO)
                                                {
                                                    <tr>
                                                        <td>@r.DirectionName</td>
                                                        <td>
                                                            <a class="btn btn-danger" title="حذف" data-toggle="tooltip"
                                                            @onclick="(() => DeleteDir(r.Id))"><i class="oi oi-trash"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else if (lst_CollageDirectionDTO.Count == 0)
                                    {
                                        <div class="alert alert-primary" role="alert">
                                            لا توجد بيانات
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center">
                                            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                                                <span class="sr-only">Loading...</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <div class="form-group d-flex justify-content-center">
                            <button class="btn btn-success mx-2" type="submit">حفظ</button>
                            <button class="btn btn-outline-dark" @onclick="Cancel">إلغاء الأمر</button>
                        </div>
                    </div>

                </EditForm>
            </div>
        </div>

    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger" role="alert">
            you are not authoriazed
        </div>
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter]
    public int Id { get; set; }
    private CollageDTO? collageDTO = new();
    private CollageDirectionDTO? collageDirectionDTO = new();
    private List<UserDTO>? lst_userDTO = new();
    private List<DirectionDTO>? lst_DirectionDTO = new();
    private List<CollageDirectionDTO>? lst_CollageDirectionDTO = new();
    protected string title = "";
    bool adding;


    protected override async Task OnParametersSetAsync()
    {
        if (Id > 0)
        {
            title = "تعديل المركز";
            collageDTO = await ser.GetById(Id);
            lst_CollageDirectionDTO = await cdSer.GetAll(Id);
            lst_DirectionDTO = await dSer.GetAll();
        }
        else
        {
            title = "إضافة مركز";
        }
        lst_userDTO = await http.GetUsers();
    }

    async void Save()
    {
        bool result = false;

        if (Id > 0)
        {
            result = await ser.Update(collageDTO, Id);
        }
        else
        {
            result = await ser.Insert(collageDTO);
        }

        if (result)
        {
            navManager.NavigateTo("/Collages");
        }
        else
        {
            await js.InvokeVoidAsync("alert", "حدث خطأ عند الحفظ");
        }
    }

    async void AddCollageDirection()
    {
        if (collageDirectionDTO.DirectionId == 0)
        {
            await js.InvokeVoidAsync("alert", "اختر جهة");
        }
        else if (lst_CollageDirectionDTO.Where(x => x.CollageId == Id && x.DirectionId == collageDirectionDTO.DirectionId).Any())
        {
            await js.InvokeVoidAsync("alert", "تم إضافة الجهة سابقاً");
        }
        else
        {
            adding = true;
            collageDirectionDTO.CollageId = Id;
            collageDirectionDTO.DirectionName = string.Empty;
            var result = await cdSer.Insert(collageDirectionDTO);
            if (!result)
            {
                await js.InvokeVoidAsync("alert", "حدث خطأ عند الإضافة");
                return;
            }
            lst_CollageDirectionDTO = await cdSer.GetAll(Id);
            adding = false;
            StateHasChanged();
        }
    }

    async void DeleteDir(int dirId)
    {
        var result = await cdSer.Delete(dirId);
        if (!result)
        {
            await js.InvokeVoidAsync("alert", "حدث خطأ عند الحذف");
            return;
        }
        lst_CollageDirectionDTO = await cdSer.GetAll(Id);
        StateHasChanged();
    }
    void Cancel()
    {
        navManager.NavigateTo("/Collages");
    }
}
